{
  "name": "crc32-ts",
  "version": "1.0.5",
  "description": "Another CRC32 generator made with TypeScript",
  "main": "dist/commonjs/index.js",
  "module": "dist/es6/index.js",
  "types": "dist/es6/index.d.ts",
  "author": "Dominik Kuen <d.kuen@averi.at>, Patrick Kuen <p.kuen@averi.at>",
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://cpm.cloudacy.io"
  },
  "scripts": {
    "build": "tsc -m ES6 --outDir dist/es6 && tsc -m commonjs --outDir dist/commonjs",
    "test": "mocha -r ts-node/register ./test/*.spec.ts",
    "pretty": "prettier --write src/* test/*",
    "prepare": "pnpm run build"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.6",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.12.14",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "prettier": "^1.17.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.7.3"
  },
  "prettier": {
    "printWidth": 999,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "proseWrap": "never"
  }
}
